{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD H:m'}}">{{date format="DD MMMM YYYY - H:m"}}</time>
        <h2 class="post-title">
          <a href="{{url}}">
            {{{title}}}
          </a>
        </h2>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt words="100"}}</p>
        <p><a class="read-more" href="{{url}}">Weiter lesen</a></p>
    </section>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
